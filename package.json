{
    "name": "tondev",
    "displayName": "TONDev",
    "description": "Free TON Development",
    "publisher": "TONLabs",
    "author": "TON DEV SOLUTIONS LTD.",
    "license": "Apache-2.0",
    "licenses": [
      {
        "type": "Apache-2.0",
        "url": "http://www.apache.org/licenses/LICENSE-2.0"
      }
    ],
    "version": "0.5.0",
    "icon": "images/tondev.png",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:tondev.clang.create",
        "onCommand:tondev.clang.compile",
        "onCommand:tondev.clang.version",
        "onCommand:tondev.clang.set",
        "onCommand:tondev.clang.update",
        "onCommand:tondev.sol.create",
        "onCommand:tondev.sol.compile",
        "onCommand:tondev.sol.version",
        "onCommand:tondev.sol.set",
        "onCommand:tondev.sol.update",
        "onCommand:tondev.se.info",
        "onCommand:tondev.se.version",
        "onCommand:tondev.se.update",
        "onCommand:tondev.se.set",
        "onCommand:tondev.se.start",
        "onCommand:tondev.se.stop",
        "onCommand:tondev.se.reset",
        "onCommand:tondev.network.add",
        "onCommand:tondev.network.delete",
        "onCommand:tondev.network.list",
        "onCommand:tondev.network.info",
        "onCommand:tondev.network.default",
        "onCommand:tondev.network.giver",
        "onCommand:tondev.signer.generate",
        "onCommand:tondev.signer.add",
        "onCommand:tondev.signer.delete",
        "onCommand:tondev.signer.list",
        "onCommand:tondev.signer.info",
        "onCommand:tondev.signer.default",
        "onCommand:tondev.contract.info",
        "onCommand:tondev.contract.topup",
        "onCommand:tondev.contract.deploy",
        "onCommand:tondev.contract.run",
        "onCommand:tondev.contract.run-local",
        "onCommand:tondev.contract.run-executor",
        "onCommand:tondev.js.create",
        "onCommand:tondev.js.demo",
        "onCommand:tondev.js.wrap",
        "onCommand:tondev.tonos-cli.install",
        "onCommand:tondev.tonos-cli.set",
        "onCommand:tondev.tonos-cli.version",
        "onCommand:tondev.tonos-cli.update"
    ],
    "main": "./out/extension.js",
    "repository": {
        "url": "https://github.com/tonlabs/tondev-vscode"
    },
    "contributes": {
        "commands": [
            {
                "command": "tondev.clang.create",
                "category": "tondev-clang",
                "title": "Create C++ Contract"
            },
            {
                "command": "tondev.clang.compile",
                "category": "tondev-clang",
                "title": "Compile C++ Contract"
            },
            {
                "command": "tondev.clang.version",
                "category": "tondev-clang",
                "title": "Show C++ Compiler Version"
            },
            {
                "command": "tondev.clang.set",
                "category": "tondev-clang",
                "title": "Change C++ Compiler Config"
            },
            {
                "command": "tondev.clang.update",
                "category": "tondev-clang",
                "title": "Update C++ Compiler"
            },
            {
                "command": "tondev.sol.create",
                "category": "tondev-sol",
                "title": "Create Solidity Contract"
            },
            {
                "command": "tondev.sol.compile",
                "category": "tondev-sol",
                "title": "Compile Solidity Contract"
            },
            {
                "command": "tondev.sol.version",
                "category": "tondev-sol",
                "title": "Show Solidity Version"
            },
            {
                "command": "tondev.sol.set",
                "category": "tondev-sol",
                "title": "Change Solidity Config"
            },
            {
                "command": "tondev.sol.update",
                "category": "tondev-sol",
                "title": "Update Solidity Compiler"
            },
            {
                "command": "tondev.se.info",
                "category": "tondev-se",
                "title": "Show SE Info"
            },
            {
                "command": "tondev.se.version",
                "category": "tondev-se",
                "title": "Show SE Versions"
            },
            {
                "command": "tondev.se.update",
                "category": "tondev-se",
                "title": "Update SE Instance Version"
            },
            {
                "command": "tondev.se.set",
                "category": "tondev-se",
                "title": "Update SE Instance Config"
            },
            {
                "command": "tondev.se.start",
                "category": "tondev-se",
                "title": "Start SE Instance"
            },
            {
                "command": "tondev.se.stop",
                "category": "tondev-se",
                "title": "Stop SE Instance"
            },
            {
                "command": "tondev.se.reset",
                "category": "tondev-se",
                "title": "Reset SE Instance"
            },
            {
                "command": "tondev.network.add",
                "category": "tondev-network",
                "title": "Add net"
            },
            {
                "command": "tondev.network.delete",
                "category": "tondev-network",
                "title": "Delete network from registry"
            },
            {
                "command": "tondev.network.list",
                "category": "tondev-network",
                "title": "Prints list of networks"
            },
            {
                "command": "tondev.network.info",
                "category": "tondev-network",
                "title": "Prints network detailed information"
            },
            {
                "command": "tondev.network.default",
                "category": "tondev-network",
                "title": "Set default network"
            },
            {
                "command": "tondev.network.giver",
                "category": "tondev-network",
                "title": "Set giver for network"
            },
            {
                "command": "tondev.signer.generate",
                "category": "tondev-signer",
                "title": "Add signer with randomly generated keys"
            },
            {
                "command": "tondev.signer.add",
                "category": "tondev-signer",
                "title": "Add signer"
            },
            {
                "command": "tondev.signer.delete",
                "category": "tondev-signer",
                "title": "Delete signer from registry"
            },
            {
                "command": "tondev.signer.list",
                "category": "tondev-signer",
                "title": "Prints list of registered signers"
            },
            {
                "command": "tondev.signer.info",
                "category": "tondev-signer",
                "title": "Get signer detailed information"
            },
            {
                "command": "tondev.signer.default",
                "category": "tondev-signer",
                "title": "Set default signer"
            },
            {
                "command": "tondev.contract.info",
                "category": "tondev-contract",
                "title": "Prints contract summary"
            },
            {
                "command": "tondev.contract.topup",
                "category": "tondev-contract",
                "title": "Top up account from giver"
            },
            {
                "command": "tondev.contract.deploy",
                "category": "tondev-contract",
                "title": "Deploy contract to network"
            },
            {
                "command": "tondev.contract.run",
                "category": "tondev-contract",
                "title": "Run contract deployed on the network"
            },
            {
                "command": "tondev.contract.run-local",
                "category": "tondev-contract",
                "title": "Run contract locally on TVM"
            },
            {
                "command": "tondev.contract.run-executor",
                "category": "tondev-contract",
                "title": "Emulate transaction executor locally on TVM"
            },
            {
                "command": "tondev.js.create",
                "category": "tondev-js",
                "title": "Create FreeTON JS App"
            },
            {
                "command": "tondev.js.demo",
                "category": "tondev-js",
                "title": "Download FreeTON Demo"
            },
            {
                "command": "tondev.js.wrap",
                "category": "tondev-js",
                "title": "Wrap ABI file into JavaScript code."
            },
            {
                "command": "tondev.tonos-cli.install",
                "category": "tondev-tonos-cli",
                "title": "Install latest stable TON OS CLI"
            },
            {
                "command": "tondev.tonos-cli.set",
                "category": "tondev-tonos-cli",
                "title": "Change installed version"
            },
            {
                "command": "tondev.tonos-cli.version",
                "category": "tondev-tonos-cli",
                "title": "Show installed and available versions"
            },
            {
                "command": "tondev.tonos-cli.update",
                "category": "tondev-tonos-cli",
                "title": "Update to the latest version"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder",
                    "command": "tondev.clang.create",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.cpp$/i",
                    "command": "tondev.clang.compile",
                    "group": "TONDev"
                },
                {
                    "when": "explorerResourceIsFolder",
                    "command": "tondev.sol.create",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.sol$/i",
                    "command": "tondev.sol.compile",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.abi$|\\.abi\\.json$|\\.tvc$/i",
                    "command": "tondev.contract.info",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.abi$|\\.abi\\.json$|\\.tvc$/i",
                    "command": "tondev.contract.topup",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.abi$|\\.abi\\.json$|\\.tvc$/i",
                    "command": "tondev.contract.deploy",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.abi$|\\.abi\\.json$|\\.tvc$/i",
                    "command": "tondev.contract.run",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.abi$|\\.abi\\.json$|\\.tvc$/i",
                    "command": "tondev.contract.run-local",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.abi$|\\.abi\\.json$|\\.tvc$/i",
                    "command": "tondev.contract.run-executor",
                    "group": "TONDev"
                },
                {
                    "when": "explorerResourceIsFolder",
                    "command": "tondev.js.create",
                    "group": "TONDev"
                },
                {
                    "when": "explorerResourceIsFolder",
                    "command": "tondev.js.demo",
                    "group": "TONDev"
                },
                {
                    "when": "resourceFilename =~ /\\.abi\\.json$/i",
                    "command": "tondev.js.wrap",
                    "group": "TONDev"
                }
            ]
        }
    },
    "scripts": {
        "prep": "node ./out/prepare_package.js",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "dependencies": {
        "tondev": "^0.5.0",
        "@tonclient/core": "^1",
        "@tonclient/lib-node": "^1"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.15.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1"
    }
}
